{% extends 'base.html.twig' %}

{% block title %}Article : {{ post.title }}{% endblock %}
{# <img src="/uploads/{{ post.illustration }}" alt="{{ post.title }}" > #}

{% block body %}
    <section class="hero-wrap hero-wrap-2" style="background-image: url({{ asset('assets/images/bg_1.jpg') }});" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
            <h1 class="mb-2 bread">{{ post.title }}</h1>
            <p class="breadcrumbs"><span class="mr-2"><a href="{{ path('app_home') }}">Accueil <i class="ion-ios-arrow-forward"></i></a></span> <span class="mr-2"><a href="{{ path('app_articles') }}">Mon Blog <i class="ion-ios-arrow-forward"></i></a></span> <span>Blog Single <i class="ion-ios-arrow-forward"></i></span></p>
          </div>
        </div>
      </div>
    </section>

    <section class="ftco-section">
			<div class="container">
				<div class="row">
          <div class="col-lg-8 ftco-animate">
          	<p>
              <img src="/uploads/{{ post.illustration }}" alt="{{ post.title }}" class="img-fluid">
            </p>
            <h2 class="mb-3">{{ post.title }}</h2>
            <hr>
            <p>{{ post.content|raw }}</p>
            </div>
          </div> <!-- .col-md-8 -->
        </div>
			</div>
		</section>
{% endblock %}